<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line_gray_d8d8d8"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以下是历史记录"
            android:textColor="@color/text_gray_909090"
            android:textSize="14sp" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line_gray_d8d8d8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--线条部分-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/mLineTop"
                android:visibility="visible"
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                />


            <View
                android:id="@+id/mLineBottom"
                android:layout_below="@id/mLineTop"
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="#CBCBCB" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/mTvTimeDot"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                tools:text="06"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/guide_log_time_cycle_history" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/mIvDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:background="@drawable/guide_log_time_cycle_history" />


        </RelativeLayout>

        <TextView
            android:id="@+id/mTvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择"
            android:textColor="@color/text_black_434343"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="15sp" />

    </LinearLayout>





</LinearLayout>