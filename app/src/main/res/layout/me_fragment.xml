<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/mSwipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/my_px_46"
                        android:paddingLeft="@dimen/my_px_40"
                        android:paddingRight="@dimen/my_px_40"
                        android:paddingTop="@dimen/my_px_58"
                        tools:background="@color/bg_gray_909090">

                         <ImageView
                             android:id="@+id/mIvHead"
                              android:layout_width="@dimen/my_px_460"
                              android:layout_height="@dimen/my_px_426"
                              tools:src="@color/green"/>

                        <LinearLayout
                            android:id="@+id/mLayoutStar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                              <ImageView
                                  android:id="@+id/mIvStar1"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:src="@mipmap/ic_star_title"/>

                            <ImageView
                                android:id="@+id/mIvStar2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_star_title"/>
                            <ImageView
                                android:id="@+id/mIvStar3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_star_title"/>
                            <ImageView
                                android:id="@+id/mIvStar4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_star_title"/>
                            <ImageView
                                android:id="@+id/mIvStar5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_star_title"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/my_px_20"
                                tools:text="4.9"
                                android:textColor="@color/text_yellow_fff000"
                                android:textStyle="bold"
                                android:textSize="@dimen/my_sp_58" />



                        </LinearLayout>

                        <TextView
                            android:id="@+id/mTvReviewRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/mLayoutStar"
                            android:layout_marginTop="@dimen/my_px_40"
                            tools:text="评价率 99.00%"
                            android:textColor="@color/text_yellow_fff000"
                            android:textSize="@dimen/my_sp_36" />

                        <TextView
                            android:id="@+id/mTvReviewCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/mTvReviewRate"
                            android:layout_marginTop="@dimen/my_px_20"
                            tools:text="连线364次 评价126次"
                            android:textColor="@color/white"
                            android:textSize="@dimen/my_sp_36" />



                        <TextView
                            android:id="@+id/mTvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mTvReviewCount"
                            android:layout_marginTop="@dimen/my_px_70"
                            android:layout_toRightOf="@+id/mIvHead"
                            android:layout_marginLeft="@dimen/my_px_40"
                            android:text="唐大山"
                            android:textStyle="bold"
                            android:textColor="@color/text_yellow_fff000"
                            android:textSize="@dimen/my_sp_48" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@+id/mIvHead"
                            android:layout_marginLeft="@dimen/my_px_40"
                            android:layout_below="@+id/mTvName"
                            android:layout_marginTop="@dimen/my_px_20"
                            android:drawableLeft="@mipmap/ic_address"
                            android:drawablePadding="@dimen/my_px_10"
                            android:text="北京市朝阳区"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/my_sp_36" />




                    </RelativeLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/mRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cacheColorHint="@null"
                        android:scrollbars="vertical" />


                    <RelativeLayout
                        android:id="@+id/mLayoutNoData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/mIvNoData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:scaleType="center"
                            android:src="@mipmap/ic_home_record_none" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mIvNoData"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="暂时还没接到电话哦"
                            android:textColor="@color/text_gray_909090"
                            android:textSize="15sp" />

                    </RelativeLayout>
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>

    </RelativeLayout>

</layout>