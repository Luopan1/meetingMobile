<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/my_px_1540"
    android:layout_height="@dimen/my_px_1000"
    android:layout_gravity="center"
    android:background="@drawable/bg_meeting_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="@dimen/my_px_1540"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_meeting_doc"
            android:drawablePadding="6dp"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:text="会议资料"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="最近三天使用过的资料"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/meeting_doc_list"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/my_px_700"
        android:layout_marginTop="20dp" />

</LinearLayout>