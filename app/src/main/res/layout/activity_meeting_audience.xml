<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentContainer"
    android:background="@color/black"
    android:keepScreenOn="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/broadcaster_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/broadcast_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="等待主持人进入..."
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:background="@color/image_background_color"
            android:id="@+id/doc_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </RelativeLayout>


    <!--视频播放界面 start-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            tools:visibility="visible"
            android:visibility="gone"
            android:id="@+id/app_video_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.dou361.ijkplayer.widget.IjkVideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/ll_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- 封面显示-->
                <ImageView
                    android:id="@+id/iv_trumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="visible"/>
            </LinearLayout>

            <!--重新播放-->
            <LinearLayout
                android:id="@+id/app_video_replay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33000000"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">
                <!-- 播放状态-->
                <TextView
                    android:id="@+id/app_video_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/small_problem"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"/>

                <ImageView
                    android:id="@+id/app_video_replay_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/simple_player_circle_outline_white_36dp"/>
            </LinearLayout>
            <!-- 网络提示-->
            <LinearLayout
                android:id="@+id/app_video_netTie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33000000"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="您正在使用移动网络播放视频\n可能产生较高流量费用"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/app_video_netTie_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/simple_player_btn"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="继续"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- 最大试看时长提示-->
            <LinearLayout
                android:id="@+id/app_video_freeTie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33000000"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="试看时间已到请购买继续观看"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/app_video_freeTie_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="购买"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!--加载中-->
            <LinearLayout
                android:id="@+id/app_video_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateOnly="true"/>
                <TextView
                    android:id="@+id/app_video_speed"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="188Kb/s"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- 中间触摸提示-->
            <include
                layout="@layout/simple_player_touch_gestures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <!-- 顶部栏-->
            <include layout="@layout/simple_player_topbar"/>
            <!-- 底部栏-->
            <include
                android:layout_marginBottom="@dimen/my_px_180"
                layout="@layout/simple_player_controlbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

            <!--声音亮度控制-->
            <LinearLayout
                android:id="@+id/simple_player_settings_container"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#80000000"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/simple_player_volume_controller_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/qcloud_player_icon_audio_vol_mute"/>

                    <SeekBar
                        android:id="@+id/simple_player_volume_controller"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/qcloud_player_icon_audio_vol"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/simple_player_brightness_controller_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/qcloud_player_icon_brightness"/>

                    <SeekBar
                        android:id="@+id/simple_player_brightness_controller"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/qcloud_player_icon_brightness"/>
                </LinearLayout>

            </LinearLayout>


            <!--分辨率选择-->
            <LinearLayout
                android:id="@+id/simple_player_select_stream_container"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#80000000"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ListView
                    android:id="@+id/simple_player_select_streams_list"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/play_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/simple_player_center_play"/>

        </RelativeLayout>
    </RelativeLayout>
    <!--视频播放界面 end -->


    <FrameLayout
        android:id="@+id/localAudienceFrameView"
        android:layout_width="@dimen/my_px_400"
        android:layout_height="@dimen/my_px_260"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="60dp"
        android:visibility="gone"
        tools:visibility="visible">


    </FrameLayout>


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/my_px_90"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/my_px_200">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/audience_list"
            android:layout_width="@dimen/my_px_700"
            android:layout_height="wrap_content"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="2"
            tools:itemCount="8"
            tools:listitem="@layout/item_meeting_audience_video" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_exity"
                android:textColor="@color/white"
                android:textSize="0sp" />

            <TextView
                android:id="@+id/page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:shadowColor="@color/black"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="第12/20页" />

        </LinearLayout>

        <TextView
            android:id="@+id/broadcaster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="主持人：李咏" />

        <TextView
            android:id="@+id/online_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_online_count"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:text="在线人数：0"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="14dp"
        android:orientation="vertical">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolsbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_buttom_meeting"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <Button
            android:id="@+id/request_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/icon_requer_speek"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="申请发言"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/stop_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/icon_exity"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="结束发言"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/mute_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/icon_speek"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="话筒打开"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />


        <Button
            android:id="@+id/switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/icon_switch_camera"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="切换摄像"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/full_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/icon_full_screen"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="全屏"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="visible" />


        <Button
            android:id="@+id/discuss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="15dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/icon_chat"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="讨论区"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/my_px_106"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/small_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_rectangle"
            android:orientation="horizontal"
            android:padding="@dimen/my_px_24">

            <TextView
                android:id="@+id/tv_chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月二"
                android:textColor="#ffffff"
                android:textSize="@dimen/my_px_42" />

            <TextView
                android:id="@+id/tv_chat_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/yellow_corner"
                android:paddingLeft="@dimen/my_px_20"
                android:paddingTop="@dimen/my_px_5"
                android:paddingRight="@dimen/my_px_20"
                android:paddingBottom="@dimen/my_px_5"
                android:text="大区"
                android:textColor="#fff000"
                android:textSize="@dimen/my_px_27"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_px_10"
                android:maxEms="21"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="@dimen/my_px_42" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_tri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/inverted_tri" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_px_750"
        android:layout_gravity="bottom"></RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_px_120"
        android:layout_gravity="bottom"
        android:background="#cc000000"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="春"
            android:textColor="#ffffff"
            android:textSize="@dimen/my_px_45" />

        <TextView
            android:id="@+id/tv_addres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yellow_corner"
            android:gravity="center"
            android:text="春"
            android:textColor="#fff000"
            android:textSize="@dimen/my_px_27"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="@dimen/my_px_45" />

        <TextView
            android:id="@+id/open_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/my_px_56"
            android:drawableRight="@mipmap/down_more"
            android:drawablePadding="@dimen/my_px_10"
            android:gravity="right"
            android:text="展开评论"
            android:textColor="#909090"
            android:textSize="@dimen/my_px_45" />

    </LinearLayout>


</FrameLayout>