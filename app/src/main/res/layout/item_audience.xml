<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stop_audience"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_audience"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/handsup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_meeting_handsup" />

    <TextView
        android:id="@+id/audience_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="1. 唐姗姗" />

    <TextView
        android:id="@+id/calling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/ic_calling"
        android:drawablePadding="8dp"
        android:text="连麦中..."
        android:textColor="@color/c_6BD500"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/talk"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_talk_selector"
        android:focusable="true"
        android:text="马上连麦"
        android:textColor="@color/c_f62c64"
        android:textSize="14sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_talk_selector"
        android:focusable="true"
        android:padding="12dp"
        android:text="查看"
        android:textColor="@color/c_f62c64"
        android:textSize="@dimen/my_sp_30"
        android:visibility="gone" />

</LinearLayout>
