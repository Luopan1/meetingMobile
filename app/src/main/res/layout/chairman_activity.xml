<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/broadcaster_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6e6e6e" />

            <TextView
                android:id="@+id/broadcast_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/my_px_20"
                android:text="等待主持人进入..."
                android:textColor="@color/white"
                android:textSize="@dimen/my_sp_30" />

            <ImageView
                android:id="@+id/doc_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:visibility="gone" />


            <FrameLayout
                android:id="@+id/broadcaster_small_layout"
                android:layout_width="@dimen/my_px_600"
                android:layout_height="@dimen/my_px_360"
                android:layout_gravity="right|bottom"
                android:visibility="gone"
                tools:visibility="visible">


                <FrameLayout
                    android:id="@+id/broadcaster_small_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/c_ff8600"
                    android:padding="5dp"
                    android:text="主持人"
                    android:textColor="@color/white"
                    android:textSize="@dimen/my_px_24" />

            </FrameLayout>

        </FrameLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/audience_list"
            android:layout_width="@dimen/my_px_700"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/my_px_40"
            android:layout_marginRight="32dp"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_meeting_audience_video" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_exity"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my_px_15"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="第1/20页"
            tools:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/broadcaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="主持人：李咏" />

    <LinearLayout
        android:id="@+id/doc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="40dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawableTop="@drawable/icon_previous"
            android:drawablePadding="@dimen/my_px_10"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="上一页"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/icon_next"
            android:drawablePadding="@dimen/my_px_10"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="下一页"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/exit_ppt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:drawableTop="@drawable/icon_exit_ppt"
            android:drawablePadding="@dimen/my_px_10"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="退出PPT演示"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/my_px_100"
        android:layout_marginBottom="@dimen/my_px_10"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1.0"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/waiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="8dp"
                android:background="@color/transparent"
                android:drawableTop="@drawable/icon_people"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="参会人"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/stop_audience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="8dp"
                android:drawableTop="@drawable/icon_exity"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="终止发言"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="invisible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/discuss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="15dp"
                android:background="@color/transparent"
                android:drawableTop="@drawable/icon_chat"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="讨论"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="8dp"
                android:drawableTop="@drawable/icon_ppt"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="会议资料"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/mute_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="8dp"
                android:drawableTop="@drawable/icon_speek"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="话筒打开"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/spliteView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:drawableTop="@drawable/icon_chat"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="均分模式"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/switch_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="8dp"
                android:drawableTop="@drawable/icon_switch_camera"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="切换摄像"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible"
                tools:visibility="visible" />

        </LinearLayout>


    </LinearLayout>

    <!--此处已经使用popwindow代替-->
    <LinearLayout
        android:id="@+id/ll_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="135px"
        android:orientation="vertical"
        tools:visibility="visible"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/small_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_rectangle"
            android:orientation="horizontal"
            android:padding="@dimen/my_px_24">

            <TextView
                android:id="@+id/tv_chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="@dimen/my_px_42" />

            <TextView
                android:id="@+id/tv_chat_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/yellow_corner"
                android:paddingLeft="@dimen/my_px_20"
                android:paddingTop="@dimen/my_px_5"
                android:paddingRight="@dimen/my_px_20"
                android:paddingBottom="@dimen/my_px_5"
                android:text="大区"
                android:textColor="#fff000"
                android:textSize="@dimen/my_px_27"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_px_10"
                android:maxEms="21"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="@dimen/my_px_42" />
        </LinearLayout>

        <ImageView
            android:layout_marginLeft="20px"
            android:id="@+id/img_tri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/inverted_tri" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_px_750"
        android:layout_gravity="bottom" />

    <LinearLayout
        android:id="@+id/ll_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_px_120"
        android:layout_gravity="bottom"
        android:background="#cc000000"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="春"
            android:textColor="#ffffff"
            android:textSize="@dimen/my_px_45" />

        <TextView
            android:id="@+id/tv_addres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yellow_corner"
            android:gravity="center"
            android:text="春"
            android:textColor="#fff000"
            android:textSize="@dimen/my_px_27"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="哈哈"
            android:textColor="#ffffff"
            android:textSize="@dimen/my_px_45" />

        <TextView
            android:id="@+id/open_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/my_px_56"
            android:drawableRight="@mipmap/down_more"
            android:drawablePadding="@dimen/my_px_10"
            android:gravity="right"
            android:text="展开评论"
            android:textColor="#909090"
            android:textSize="@dimen/my_px_45" />

    </LinearLayout>

</FrameLayout>
