<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context="io.agora.openlive.ui.MeetingBroadcastActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/broadcaster_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/broadcast_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/my_px_20"
            android:textColor="@color/white"
            android:textSize="@dimen/my_sp_30"
            tools:text="等待主持人进入..." />

        <ImageView
            android:id="@+id/doc_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/my_px_30"
            android:layout_marginBottom="@dimen/my_px_20"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:textColor="@color/white"
            android:textSize="@dimen/my_px_30"
            android:visibility="gone"
            tools:text="第12/20页" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_back"
            android:drawablePadding="2dp"
            android:text="退出"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/broadcaster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="主持人：李咏" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="14dp"
        android:gravity="right"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/broadcaster_small_layout"
                android:layout_width="209dp"
                android:layout_height="117dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/role_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/c_ff8600"
                android:padding="5dp"
                android:text="主持人"
                android:textColor="@color/white"
                android:textSize="@dimen/my_px_24"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/audience_layout"
            android:layout_width="209dp"
            android:layout_height="117dp"
            android:background="@android:color/black"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/audience_view"
                android:layout_width="209dp"
                android:layout_height="117dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/audience_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="等待参会人连麦"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/audience_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="唐晓凤" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_buttom_meeting"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <Button
            android:id="@+id/waiter"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_meeting_button_selector"
            android:drawableLeft="@drawable/ic_meeting_signup"
            android:drawablePadding="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="等待发言（0）"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/stop_audience"
            android:layout_width="99dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_meeting_button_selector"
            android:drawableLeft="@drawable/ic_meeting_end_speech"
            android:drawablePadding="3dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="终止发言"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/mute_audio"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_meeting_mute_selector"
            android:src="@drawable/ic_unmuted"/>

    </LinearLayout>

</FrameLayout>
