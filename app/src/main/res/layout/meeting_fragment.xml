<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/title_meeting_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_px_300"
        android:background="@drawable/bg_gradient_vertical_color">

        <TextView
            android:id="@+id/tv_meeting_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_px_43"
            android:layout_marginLeft="@dimen/my_px_43"
            android:layout_marginBottom="@dimen/my_px_200"
            android:text="公开会议"
            android:theme="@style/MeetingTypeFocus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_meeting_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_px_29"
            android:layout_marginLeft="@dimen/my_px_29"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@+id/tv_meeting_public"
            android:text="受邀会议"
            android:theme="@style/MeetingTypeUnFocus"
            app:layout_constraintBottom_toBottomOf="@+id/tv_meeting_public"
            app:layout_constraintStart_toEndOf="@+id/tv_meeting_public" />

        <TextView
            android:id="@+id/tv_meeting_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_px_29"
            android:layout_marginLeft="@dimen/my_px_29"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@+id/tv_meeting_private"
            android:text="讨论区"
            android:theme="@style/MeetingTypeUnFocus"
            app:layout_constraintBottom_toBottomOf="@+id/tv_meeting_private"
            app:layout_constraintStart_toEndOf="@+id/tv_meeting_private" />

        <ImageButton
            android:id="@+id/ib_meeting_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/my_px_37"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="@dimen/my_px_183"
            android:background="@drawable/bg_ic_meeting_forum"
            android:src="@drawable/ic_meeting_forum"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/mSwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/my_px_141"
        app:layout_constraintTop_toTopOf="@+id/title_meeting_list">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/id_coordinatorlayout_appbar_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#00FFFFFF"
                app:elevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_px_158"
                    app:layout_scrollFlags="scroll|snap">

                    <FrameLayout
                        android:id="@+id/search_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_px_35"
                        android:layout_marginRight="@dimen/my_px_35"
                        android:layout_marginBottom="@dimen/my_px_43"
                        android:background="@drawable/bg_meeting_search_edittext">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/my_px_115"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_search"
                            android:drawablePadding="3dp"
                            android:gravity="center"
                            android:hint="请输入会议名称搜索"
                            android:textColorHint="#FFFFFF"
                            android:textSize="14sp" />
                    </FrameLayout>

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="@color/white"
                android:cacheColorHint="@null"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />


            <TextView
                android:id="@+id/emptyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:drawableTop="@drawable/ic_home_record_none"
                android:drawablePadding="8dp"
                android:gravity="center_horizontal"
                android:text="暂时没有会议"
                android:textColor="#909090"
                android:textSize="15sp"
                android:visibility="gone" />
        </android.support.design.widget.CoordinatorLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.constraint.ConstraintLayout>