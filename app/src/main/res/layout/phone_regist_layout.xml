<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_color"
        android:orientation="vertical"
        tools:context=".business.PhoneRegisterActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="137dp"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_login_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:text="15901177524"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:theme="@style/WhiteEdittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/edt_phone_verification_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="4"
            android:text="1111"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:theme="@style/WhiteEdittext"
            app:layout_constraintEnd_toEndOf="@+id/edt_phone_number"
            app:layout_constraintStart_toStartOf="@+id/edt_phone_number"
            app:layout_constraintTop_toBottomOf="@+id/edt_phone_number" />

        <Button
            android:id="@+id/btn_phone_request_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_verification_fillet_bg_selector"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_phone_verification_code"
            app:layout_constraintEnd_toEndOf="@+id/edt_phone_verification_code"
            app:layout_constraintTop_toBottomOf="@+id/edt_phone_number"
            app:layout_constraintVertical_bias="0.51" />

        <Button
            android:id="@+id/btn_phone_login"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/btn_phone_login_bg_selector"
            android:text="绑定"
            android:textColor="@color/purple_B07EDA"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_phone_verification_code"
            app:layout_constraintVertical_bias="0.028" />
    </android.support.constraint.ConstraintLayout>
</layout>