<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/purple_811fcd" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/home_head_bg">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mIvHead"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:src="@mipmap/baby_default_avatar"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp"

                    />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_home_record" />

                <TextView
                    android:id="@+id/mTvM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="分钟"
                    android:textColor="@color/text_gray_909090"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mTvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/mTvM"
                    android:textColor="@color/text_yellow_ff9c00"
                    android:textSize="15sp"
                    tools:text="123456" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/mTvTime"
                    android:text="累计"
                    android:textColor="@color/text_gray_909090"
                    android:textSize="15sp" />


            </RelativeLayout>


        </LinearLayout>



    </LinearLayout>

</layout>