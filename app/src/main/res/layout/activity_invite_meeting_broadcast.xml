<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_invite_meeting">

        <FrameLayout
            android:id="@+id/broadcaster1_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/doc1_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_back"
            android:drawablePadding="6dp"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="退出"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="第1/20页"
            tools:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/broadcaster_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="主持人：李咏" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginLeft="14dp"
            android:layout_weight="1.0"
            android:background="@android:color/black">

            <FrameLayout
                android:id="@+id/broadcaster_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/doc_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:visibility="visible" />

        </FrameLayout>

        <io.agora.openlive.ui.AudienceRecyclerView
            android:id="@+id/audience_list"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginRight="14dp"
            android:layout_weight="1.0"
            android:visibility="invisible"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_buttom_meeting"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <ImageButton
            android:id="@+id/full_screen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_meeting_mute_selector"
            android:src="@drawable/ic_full_screen" />

        <LinearLayout
            android:id="@+id/doc_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <Button
                android:id="@+id/preview"
                android:layout_width="70sp"
                android:layout_height="30sp"
                android:background="@drawable/bg_meeting_button_selector"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="上一页"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/next"
                android:layout_width="70sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_meeting_button_selector"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="下一页"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/exit_ppt"
                android:layout_width="110sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_meeting_button_selector"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="退出PPT演示"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/camera_switch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_meeting_mute_selector"
            android:src="@drawable/ic_switch_camera" />

        <ImageButton
            android:id="@+id/mute_audio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_meeting_mute_selector"
            android:src="@drawable/ic_unmuted" />

        <Button
            android:id="@+id/meeting_doc"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_meeting_button_selector"
            android:drawableLeft="@drawable/ic_meeting_doc"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="会议资料"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/finish_meeting"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_meeting_button_selector"
            android:drawableLeft="@drawable/ic_meeting_close"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="结束会议"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</FrameLayout>
