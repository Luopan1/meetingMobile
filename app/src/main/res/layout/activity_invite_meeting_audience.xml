<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:keepScreenOn="true"
    tools:context="io.agora.openlive.ui.InviteMeetingAudienceActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:visibility="visible">

        <FrameLayout
            android:id="@+id/broadcaster_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/broadcaster_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/my_sp_30"
            android:text="等待主持人进入"/>

        <ImageView
            android:id="@+id/doc_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_back"
            android:drawablePadding="6dp"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="退出"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="第1/20页"
            tools:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/broadcaster_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="主持人：李咏" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/broadcaster_small_view"
                android:layout_width="@dimen/my_px_417"
                android:layout_height="@dimen/my_px_234"
                android:background="@android:color/black"
                android:layout_marginLeft="@dimen/my_px_90"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_buttom_meeting"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/my_px_90"
                android:paddingTop="@dimen/my_px_20"
                android:paddingRight="@dimen/my_px_30"
                android:paddingBottom="@dimen/my_px_24">

                <Button
                    android:id="@+id/finish_meeting"
                    android:layout_width="@dimen/my_px_232"
                    android:layout_height="@dimen/my_px_90"
                    android:background="@drawable/bg_meeting_button_selector"
                    android:drawableLeft="@drawable/ic_meeting_close"
                    android:paddingLeft="@dimen/my_px_30"
                    android:paddingRight="@dimen/my_px_30"
                    android:text="退出会议"
                    android:textColor="@color/white"
                    android:textSize="@dimen/my_sp_26" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1.0" />

                <ImageButton
                    android:id="@+id/mute_audio"
                    android:layout_width="@dimen/my_px_70"
                    android:layout_height="@dimen/my_px_70"
                    android:background="@drawable/bg_meeting_mute_selector"
                    android:src="@drawable/ic_unmuted" />

                <ImageButton
                    android:id="@+id/full_screen"
                    android:layout_width="@dimen/my_px_70"
                    android:layout_height="@dimen/my_px_70"
                    android:layout_marginLeft="@dimen/my_px_30"
                    android:background="@drawable/bg_meeting_mute_selector"
                    android:src="@drawable/ic_full_screen"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/my_px_458"
            android:layout_height="wrap_content"
            android:background="@color/transparent_60_black"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:padding="@dimen/my_px_24">

            <io.agora.openlive.ui.AudienceRecyclerView
                android:id="@+id/audience_list"
                android:layout_width="@dimen/my_px_458"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
